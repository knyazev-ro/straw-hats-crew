generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int          @id @default(autoincrement())
  name         String
  login        String
  passwordHash String
  leads        Team[]       @relation(name: "leads")
  teams        Team[]       @relation(name: "teams")
  achivements  Achivement[]
}

model Challenge {
  id           Int           @id @default(autoincrement())
  startDate    DateTime      @default(now())
  endDate      DateTime
  name         String
  description  String?
  type         ChallengeType
  teams        Team[]
  achivement   Achivement    @relation(fields: [achivementId], references: [id])
  achivementId Int
  posts        Post[]
}

model Team {
  id          Int       @id @default(autoincrement())
  name        String
  lead        User      @relation(fields: [leadId], references: [id], name: "leads")
  leadId      Int
  users       User[]    @relation(name: "teams")
  challenge   Challenge @relation(fields: [challengeId], references: [id])
  challengeId Int
}

model Achivement {
  id          Int         @id @default(autoincrement())
  title       String
  description String
  challenges  Challenge[]
  users       User[]
}

enum ChallengeType {
  LOCAL
  TEAM
  FAMILY
}

model Post {
  id          Int       @id @default(autoincrement())
  challengeId Int
  description String?
  challenge   Challenge @relation(fields: [challengeId], references: [id])
}
